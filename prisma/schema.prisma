 generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id @default(cuid())
  email       String    @unique
  password    String   @default("")
  username    String?
  isPaid      Boolean @default(false)
  maxWebsites Int?
  favWebsites Website[]  // One-to-Many relationship with Website
}

model Website {
  id           Int      @id @default(autoincrement())
  url          String
  status       String
  responseTime Int
  timestamp    DateTime @default(now())
  userId       String?   // Optional foreign key
  user         User?     @relation(fields: [userId], references: [id]) // Optional relation
}
